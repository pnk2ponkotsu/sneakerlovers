<div class = "container" >
 <div class = "row" >
  <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >
   <h2>投稿内容編集</h2>
    <%= form_with model: @shoo do |f| %>
     <% if @shoo.errors.any? %>
     <h3><%= @shoo.errors.count %>件のエラーが発生しました。</h3>
     <ul>
      <% @shoo.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
     <% end %>
     
     <label for = "inputImage" >スニーカー画像</label><br>
      <%= f.file_field :image, placeholder: "スニーカー画像", accept: "image/*" %><br>
     <label for = "inputTitle" >スニーカー名</label><br>
      <%= f.text_field :title, autofocus: true, id:"inoutTitle", placeholder:"スニーカー名" %><br>
     <label for = "inputBody" >スニーカーコメント</label><br>
      <%= f.text_area :body, autofocus:true,id:"inputBOdy", placeholder:"スニーカー「コメント" %><br>
     <%= f.submit "変更を保存" %>
     <%=link_to "戻る", user_path, class: "back" %>
    <% end %>
  </div>
  
  
  
 </div>
</div>
