
<div class = "container" >
 <div class = "row" >
  <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >
   <h2>ユーザー情報編集</h2>
    <%= form_with model: @user do |f| %>
     <% if @user.errors.any? %>
     <h3><%= @user.errors.count %>件のエラーが発生しました。</h3>
     <ul>
      <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
     <% end %>


     <label for = "inputImage">ユーザー画像</label><br>
      <%= f.file_field :image, placeholder: "ユーザー画像", accept: "image/*" %><br>
     <label for = "inputName" >ユーザー名</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名" %><br>
     <%= f.submit "変更を保存" %>
    <% end %>
  </div>
 </div>
</div>